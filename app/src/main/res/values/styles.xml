<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item> <!-- Blue 500, actionbar color -->
		<item name="colorPrimaryDark">@color/primaryDark</item> <!-- Blue 700, statusbar color -->

		<item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
	</style>

	<style name="divider">
		<item name="android:background">#000000</item>
		<item name="android:alpha">0.12</item>
	</style>

	<style name="card">
		<item name="android:layout_marginLeft">@dimen/layout_cardmargin</item>
		<item name="android:layout_marginRight">@dimen/layout_cardmargin</item>
		<item name="android:layout_marginBottom">@dimen/layout_cardmargin</item>
	</style>

</resources>
