						android:orientation="horizontal">

						<TextView
							android:layout_height="wrap_content"
							android:layout_width="wrap_content"
							android:text="M. d. Krosse"
							android:layout_weight="1"
							android:textSize="@dimen/card_text_secondary_size"
							android:textColor="@color/textCardSecondary" />
						<TextView
							android:layout_height="wrap_content"
