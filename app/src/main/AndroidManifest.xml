<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.magisterapp.magisterapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logoapp"
        android:label="@string/app_name"
        android:name="eu.magisterapp.magisterapp.MagisterApp"
        android:theme="@style/AppTheme" >
        <activity
            android:name="eu.magisterapp.magisterapp.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eu.magisterapp.magisterapp.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.Base">
        </activity>
    </application>

</manifest>
